<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="assets/style/reset.css" rel="stylesheet" type="text/css" />
    <link href="assets/style/createArticle.css" rel="stylesheet" type="text/css" />
     <link rel='stylesheet' type='text/css' media='screen' href='assets/style/header.css'>
    <title>Document</title>
</head>
<body>
  {% include "headerAdmin.html.twig"%}


     <form method="post" action="/createEvent" enctype='multipart/form-data'>
        <input type="text" name="nom" placeholder="Insert Name" class="input">
        <textarea name="description" placeholder="Insert Description" class="input"></textarea>
        <input type="text" name="date" placeholder="Insert Date" class="input">
        <input type="text" name="place" placeholder="Insert place" class="input">
        <label for="img" class="imgLabel">Add img</label>
        <input type="file" id="img" name="image" class="imgForm" accept="image/*">
        <input type="submit" name="createEvent" value="Event" class="button">
    </form>



   <table>
            <tr>
                <th>Title</th>
                <th>Bio</th>
                <th>Date</th>
                <th>Place</th>
                <th>Image</th>
                <th>DeleteButton</th>
            </tr>
        {% for event in events %}
            <tr>
                <th>{{ event.nom }}</th>
                <th>{{ event.description }}</th>
                <th>{{ event.date }}</th>
                <th>{{ event.place }}</th>
                <th><img src="http://localhost/images/{{ event.image }}" style="height: 100px"></th>
                <th>  
                    <form method="POST" action="/admin/createEvent/deleteEvent">
                        <input type="submit" name="{{event.id}}" value="Delete" class="buttonDelete">
                    </form>
                </th>
            </tr>
        {% endfor %}
    </table>

    {% block content %}{% endblock %}

</body>
</html>